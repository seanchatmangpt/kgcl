---
id: nextjs-entity-card
engine: jinja2
language: typescript
framework: nextjs
version: "1.0.0"

ontology:
  graph_id: ecommerce
  base_iri: "http://example.org/ecommerce#"

queries:
  - name: display_props
    purpose: Get display properties for card
    source: inline
    content: |
      PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
      PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
      PREFIX shop: <http://example.org/ecommerce#>

      SELECT ?prop ?label ?range WHERE {
        ?prop rdfs:domain <{{ entity.uri }}> ;
              rdfs:label ?label ;
              rdfs:range ?range .
        FILTER(?range IN (xsd:string, xsd:decimal, xsd:boolean))
      }
      ORDER BY ?label
      LIMIT 4

metadata:
  author: kgcl-projection
  description: React card component for {{ entity.label }}
  tags:
    - react
    - component
    - nextjs
---
'use client';

import { {{ entity.label }} } from '@/types/{{ entity.slug }}';
import { Card, CardContent, CardHeader, CardTitle } from '@/components/ui/card';
import { Badge } from '@/components/ui/badge';

/**
 * {{ entity.label }}Card - Display card for {{ entity.label }} entity
 *
 * @generated from RDF ontology via KGCL projection
 */

interface {{ entity.label }}CardProps {
  item: {{ entity.label }};
  onClick?: (item: {{ entity.label }}) => void;
}

export function {{ entity.label }}Card({ item, onClick }: {{ entity.label }}CardProps) {
  return (
    <Card
      className="cursor-pointer hover:shadow-lg transition-shadow"
      onClick={() => onClick?.(item)}
    >
      <CardHeader>
        <CardTitle className="flex items-center justify-between">
          <span>{{ entity.label }} #{item.id.slice(0, 8)}</span>
        </CardTitle>
      </CardHeader>
      <CardContent>
        <dl className="space-y-2">
{% for prop in sparql.display_props %}
{% if prop.range | uri_local_name == 'boolean' %}
          <div className="flex justify-between">
            <dt className="text-muted-foreground">{{ prop.label | pascal_case }}</dt>
            <dd>
              <Badge variant={item.{{ prop.label | camel_case }} ? 'default' : 'secondary'}>
                {item.{{ prop.label | camel_case }} ? 'Yes' : 'No'}
              </Badge>
            </dd>
          </div>
{% elif prop.range | uri_local_name == 'decimal' %}
          <div className="flex justify-between">
            <dt className="text-muted-foreground">{{ prop.label | pascal_case }}</dt>
            <dd className="font-mono">${item.{{ prop.label | camel_case }}?.toFixed(2)}</dd>
          </div>
{% else %}
          <div className="flex justify-between">
            <dt className="text-muted-foreground">{{ prop.label | pascal_case }}</dt>
            <dd className="truncate max-w-[200px]">{item.{{ prop.label | camel_case }}}</dd>
          </div>
{% endif %}
{% endfor %}
        </dl>
      </CardContent>
    </Card>
  );
}

export default {{ entity.label }}Card;
