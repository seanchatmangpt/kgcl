ontology:
  graph_id: ecommerce
  base_iri: "http://example.org/ecommerce#"

queries:
  - name: properties
    purpose: Get properties for validation
    source: inline
    content: |
      PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
      PREFIX shop: <http://example.org/ecommerce#>

      SELECT ?prop ?label ?required WHERE {
        ?prop rdfs:domain <{{ entity.uri }}> ;
              rdfs:label ?label .
        OPTIONAL { ?prop shop:required ?required }
        FILTER(?prop != rdfs:label && ?prop != rdfs:comment)
      }

metadata:
  author: kgcl-projection
  description: Next.js API route for {{ entity.label }}
  tags:
    - api
    - nextjs
    - rest
---
import { NextRequest, NextResponse } from 'next/server';
import { prisma } from '@/lib/prisma';
import { {{ entity.label }}, {{ entity.label }}CreateInput } from '@/types/{{ entity.slug }}';

/**
 * {{ entity.label }} API Route
 *
 * @generated from RDF ontology via KGCL projection
 * @entity {{ entity.uri }}
 */

// GET /api/{{ entity.plural }}
export async function GET(request: NextRequest) {
  try {
    const { searchParams } = new URL(request.url);
    const page = parseInt(searchParams.get('page') || '1');
    const limit = parseInt(searchParams.get('limit') || '10');
    const skip = (page - 1) * limit;

    const [items, total] = await Promise.all([
      prisma.{{ entity.slug }}.findMany({
        skip,
        take: limit,
        orderBy: { createdAt: 'desc' },
      }),
      prisma.{{ entity.slug }}.count(),
    ]);

    return NextResponse.json({
      data: items,
      meta: {
        page,
        limit,
        total,
        totalPages: Math.ceil(total / limit),
      },
    });
  } catch (error) {
    console.error('[{{ entity.label | upper }}_GET]', error);
    return NextResponse.json(
      { error: 'Failed to fetch {{ entity.plural }}' },
      { status: 500 }
    );
  }
}

