Person(user, "User", "Developer or operator working with knowledge graphs")

System(kgcl_cli, "KGCL CLI", "Command-line interface for hybrid RDF engine with noun-verb structure")

System_Ext(eye, "EYE Reasoner", "Euler Yet another proof Engine for N3 logic reasoning")
System_Ext(filesystem, "File System", "Turtle/N3 topology files and persistent stores")

Rel(user, kgcl_cli, "Uses", "kgcl <noun> <verb>")
